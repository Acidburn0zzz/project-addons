<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="project_view_form" model="ir.ui.view">
            <field name="name">project.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project_invoicing.project_view_form"/>
            <field name="arch" type="xml">
                <field name="all_task_ids" position="replace"/>
                <page name="invoice_prepare" position="before">
                    <notebook position="inside">
                        <page string="Task Stages">
                            <field name="type_ids" colspan="2" nolabel="1">
                                <tree>
                                    <field name="sequence"/>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="fold"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </page>
            </field>
        </record>
    </data>
</openerp>
